{
  "name": "vscode-lunte",
  "displayName": "Lunte LSP Client",
  "description": "Visual Studio Code extension for Lunte JavaScript linter",
  "version": "0.2.1",
  "publisher": "holepunch",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "lunte.lsp.command": {
          "type": "string",
          "default": "npx",
          "description": "Command used to launch the Lunte language server"
        },
        "lunte.lsp.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "lunte-lsp"
          ],
          "description": "Arguments passed to the command that launches the Lunte language server"
        }
      }
    }
  },
  "license": "Apache-2.0",
  "author": "Mikkel Malmberg <mikkel@holepunch.to>",
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "lunte",
    "linter",
    "javascript",
    "lsp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/holepunchto/lunte.git",
    "directory": "packages/vscode-lunte"
  },
  "homepage": "https://github.com/holepunchto/lunte#readme",
  "bugs": {
    "url": "https://github.com/holepunchto/lunte/issues"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
